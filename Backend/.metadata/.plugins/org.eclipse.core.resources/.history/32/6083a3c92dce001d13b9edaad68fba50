package com.example.student.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.HttpStatusCode;
import org.springframework.http.ResponseEntity;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.student.entity.Student;
import com.example.student.entity.UserInfo;
import com.example.student.service.StudentService;

import jakarta.validation.Valid;

@RestController
@RequestMapping(path = "/api")
public class StudentController {

	@Autowired
	    private StudentService service;
	
	   //create student
	//POST- create user
		@PostMapping("/")
		public ResponseEntity<Student> createUser(@Valid@RequestBody Student userDto)
		{
			Student addStudent = this.service.addStudent(userDto);
			return new ResponseEntity<>(addStudent,HttpStatus.CREATED);
			
		}
	
	
		//Getting List of All Students
		@GetMapping("/getAll")
		public ResponseEntity<List<Student>> showAllCC(){
			return ResponseEntity.ok(this.service.getStudents());
		}
		
		@PostMapping("/SignUp")
		public ResponseEntity<Student> registerCC(@Valid @RequestBody Student cc) {
			return new ResponseEntity<Student>(this.service.addStudent(cc),HttpStatus.CREATED);
		}
		
	
		//For page login
//		@PostMapping("/Login")
//		public ResponseEntity<Student> signIn(@RequestBody UserInfo user) {
//			Student cc=this.service.getByUsernameAndPassword(user.getUsername(), user.getPassword());
//			if(cc!=null) {
//				return new ResponseEntity<Student>(cc, HttpStatus.ACCEPTED);
//			}else {
//				return new ResponseEntity<Student>(cc, HttpStatus.BAD_REQUEST);
//			}
//		}
}
